<odoo>
<record id="retained_earning_appropriation_view_tree" model="ir.ui.view">
    <field name="name">retained_earning_appropriation - Tree</field>
    <field name="model">retained_earning_appropriation</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="field[@name='company_id']" position="after">
                <field name="type_id" />
                <field name="company_currency_id" invisible="1" />
                <field name="date" />
                <field name="date_start" />
                <field name="date_end" />
                <field
                        name="amount_unappropriate"
                        string="Unappropriate"
                        optional="hide"
                    />
                <field name="amount_appropriate" string="Appropriate" optional="hide" />
                <field name="amount_to_appropriate" string="To Appropriate" />
                <field name="amount_distribute" string="Distribute" />
                <field name="amount_diff" string="Diff" />
            </xpath>
        </data>
    </field>
</record>

<record id="retained_earning_appropriation_view_search" model="ir.ui.view">
    <field name="name">retained_earning_appropriation - Search</field>
    <field name="model">retained_earning_appropriation</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="retained_earning_appropriation_view_form" model="ir.ui.view">
    <field name="name">retained_earning_appropriation - Form</field>
    <field name="model">retained_earning_appropriation</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="type_id" />
                <field name="company_currency_id" invisible="1" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="date_due" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="appropriation" string="Appropriation">
                    <button
                            name="action_reload_distribution"
                            string="Distribution"
                            icon="fa-refresh"
                            class="oe_highlight"
                            type="object"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        />
                    <field name="distribution_ids">
                        <tree editable="top">
                            <field name="type_id" />
                            <field name="partner_id" />
                            <field name="currency_id" invisible="1" />
                            <field name="amount_appropriate" />
                        </tree>
                    </field>
                    <group name="appropriation_2" colspan="4" col="2">
                        <group name="appropriation_2_2" colspan="1" col="2">
                            <field name="num_distribution" />
                            <field name="amount_unappropriate" string="Unappropriate" />
                            <field name="amount_appropriate" string="Appropriate" />
                            <field
                                    name="amount_to_appropriate"
                                    string="To Appropriate"
                                />
                            <field name="amount_distribute" string="Distribute" />
                            <field name="amount_diff" string="Diff" />
                        </group>
                    </group>
                </page>
                <page name="accounting" string="Accounting">
                    <group name="accounting_1" colspan="4" col="2">
                        <group name="accounting_1_1" colspan="1" col="2">
                            <field name="journal_id" />
                            <field name="retained_earning_account_id" />
                            <field name="appropriation_account_id" />
                            <field name="analytic_account_id" />
                        </group>
                        <group name="accounting_1_2" colspan="1" col="2">
                            <field name="move_id" />
                        </group>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="retained_earning_appropriation_action" model="ir.actions.act_window">
    <field name="name">Retained Earning Appropriations</field>
    <field name="res_model">retained_earning_appropriation</field>
    <field name="view_mode">tree,form</field>
</record>


<menuitem
        id="retained_earning_appropriation_menu"
        name="R/E Appropriations"
        parent="ssi_financial_accounting.menu_equity"
        groups="retained_earning_appropriation_viewer_group"
        action="retained_earning_appropriation_action"
        sequence="10"
    />
</odoo>
